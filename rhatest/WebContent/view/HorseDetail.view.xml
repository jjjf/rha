<mvc:View
	controllerName="sap.ui.rha.controller.HorseDetail"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    >
    
	<TileContainer
			id="container"
			width="40%"
	>
		<StandardTile
		    id="tileDate"
			header="DAY"
			size="M"
			frameType="TwoByOne"
			icon="sap-icon://{icon}"
				type="{type}"
				number=""
				numberUnit=""
				title="DAY"
				info="The race date"
				infoState="{infoState}" />
				
		<StandardTile
		    id="tileDistance"
			header="Distance"
			size="M"
			frameType="TwoByOne"
			icon="sap-icon://{icon}"
				type="{type}"
				number=""
				numberUnit="Furlong"
				title="Distance"
				info="The distance covered in last race"
				infoState="{infoState}" />
	
	
      <StandardTile
            id="tileSpeed"
			header="Speed"
			size="M"
			frameType="TwoByOne"
			icon="sap-icon://{icon}"
				type="{type}"
				number=""
				numberUnit=""
				title="Speed"
				info="The average speed in last race"
				infoState="30" />
		<StandardTile
			id="tileHeartRate"
			header="HeartRate"
			size="M"
			frameType="TwoByOne"
			icon="sap-icon://{icon}"
				type="{type}"
				number=""
				numberUnit=""
				title="Heart Rate"
				info="The average Heart Rate"
				infoState="{infoState}" />	
	
	</TileContainer>
		
</mvc:View>
