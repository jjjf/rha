<mvc:View
	controllerName="sap.ui.rha.controller.Nav"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">


		<HBox>
			<Button
				icon="sap-icon://list"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="2" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p1" />
				</customData>
			</Button>
			<Button
				icon="sap-icon://display"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p2" />
				</customData>
			</Button>
			<Button
				text="To 3"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p3" />
				</customData>
			</Button>
			<Button
				text="To 4"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
				<customData>
					<core:CustomData
						key="target"
						value="p4" />
				</customData>
			</Button>
		</HBox>
		<NavContainer
			id="navCon"
			width="98%"
			height="16em"
			class="navContainerControl sapUiSmallMarginBottom">
			
			<Page
				id="p1" >
			<mvc:XMLView viewName="sap.ui.rha.view.MyHorses"/>
			</Page>
			<Page
				id="p2"
				title="Page 2" >
			<mvc:XMLView viewName="sap.ui.rha.view.HorseHistory"/>
				<footer><Toolbar><Button text="Action 3" /></Toolbar></footer>
			</Page>
			<Page
				id="p3"
				title="Page 3" >
			<mvc:XMLView viewName="sap.ui.rha.view.HorseLive"/>
				<footer><Toolbar><Button text="Action 3" /></Toolbar></footer>
			</Page>
			
			<Page
				id="p4"
				title="Page 4" >
			<mvc:XMLView viewName="sap.ui.rha.view.HorseLive"/>
				<footer><Toolbar><Button text="Action 4" /></Toolbar></footer>
			</Page>
		</NavContainer>

		<HBox>
			<Button
				text="Back"
				type="Back"
				press="handleNav">
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Button>
			<Select id="animationSelect">
				<core:Item text="Slide animation" key="slide" />
				<core:Item text="Fade animation" key="fade" />
				<core:Item text="Flip animation" key="flip" />
				<core:Item text="Show animation" key="show" />
				<layoutData>
					<FlexItemData growFactor="1" />
				</layoutData>
			</Select>
		</HBox>
</mvc:View>