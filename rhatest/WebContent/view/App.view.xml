<mvc:View
   controllerName="sap.ui.rha.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
   <App class="sapUiRha" id="App">
      <pages>
         <Page title="{i18n>homePageTitle}">
            <content>
               <mvc:XMLView viewName="sap.ui.rha.view.Nav"/>
					<Button
						icon="sap-icon://hello-world"
						press="onOpenDialog"/>
               <mvc:XMLView viewName="sap.ui.rha.view.HelloPanel"/>
               <mvc:XMLView viewName="sap.ui.rha.view.DataList"/>
               <mvc:XMLView viewName="sap.ui.rha.view.HorseTable"/>
				<mvc:XMLView viewName="sap.ui.rha.view.HorseDetail"/>
            </content>
         </Page>
      </pages>
   </App>
</mvc:View>